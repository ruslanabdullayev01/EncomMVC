@using Encom.Helpers
@model PageNatedList<SocialMedia>
@{
    ViewData["Title"] = "Index";
    int dataCount = ViewBag.DataCount;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h2 class="card-title">@language.Getkey("Bio")</h2>
                    @if (dataCount == 0)
                    {
                        <a asp-area="EncomAdmin" asp-controller="SocialMedias" asp-action="Create" class="btn btn-primary text-white mr-2">@language.Getkey("Create")</a>
                    }
                </div>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    №
                                </th>
                                <th>
                                    Facebook
                                </th>
                                <th>
                                    Twitter
                                </th>
                                <th>
                                    Telegram
                                </th>
                                <th>
                                    Linkedin
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (SocialMedia bio in Model)
                            {
                                <tr>
                                    <td>
                                        1
                                    </td>
                                    <td>
                                        <a href="@bio.Facebook">Facebook</a>
                                    </td>
                                    <td>
                                        <a href="@bio.Twitter">Twitter</a>
                                    </td>
                                    <td>
                                        <a href="@bio.Telegram">Telegram</a>
                                    </td>
                                    <td>
                                        <a href="@bio.Linkedin">Linkedin</a>
                                    </td>
                                    <td style="vertical-align: middle; text-align: center; ">
                                        <a asp-action="Update" asp-route-id="@bio.Id" class="btn btn-info text-white mr-2">@language.Getkey("Update")</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @if (Model.HasPrev)
                {
                    <li class="page-item">
                        <a class="page-link" asp-area="EncomAdmin" asp-controller="SocialMedias" asp-action="Index"
                           asp-route-pageIndex="@(Model.PageIndex - 1)">@language.Getkey("Previous")</a>
                    </li>
                }
                @for (int i = Model.StartPage; i <= Model.EndPage; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")"><a class="page-link" asp-area="EncomAdmin" asp-controller="SocialMedias" asp-action="Index" asp-route-pageIndex="@i">@i</a></li>
                }
                @if (Model.HasNext)
                {
                    <li class="page-item">
                        <a class="page-link" asp-area="EncomAdmin" asp-controller="SocialMedias" asp-action="Index"
                           asp-route-pageIndex="@(Model.PageIndex + 1)">@language.Getkey("Next")</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>